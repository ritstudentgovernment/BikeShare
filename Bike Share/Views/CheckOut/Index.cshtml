    $('#userToCheckIn').change(function () {
        var serviceURL = "@Url.Action("isUserValid")";

        $.ajax({
            type: "GET",
            url: serviceURL,
            data: { validationName: $('#userToCheckIn').val() },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: successFunc,
            error: errorFunc
        });

