@using BikeShare.Views
@model BikeShare.ViewModels.PaginatedViewModel<BikeShare.ViewModels.bikeCard>

@{
	ViewBag.Title = "Mechanic's Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section menuSection{
    @Html.Partial("_MechanicMenuPartial")
}
<h2 class="text-center"><span class="glyphicon glyphicon-wrench pull-left"></span>@ViewBag.Title</h2>
<hr />
<div class="row">
@foreach (var card in Model.modelList)
{
	<div class="col-md-6">
		<div class="panel panel-@card.getStatusStyle()">
			<div class="panel-heading"><h4 class="panel-title">Bike #@card.bikeNumber - @card.bikeName</h4></div>
			<div class="panel-body">Last Inspected: @card.dateLastInspected Last Maintained: @card.dateLastMaintenance</div>
			<div class="text-right panel-footer">
				<a class="btn btn-default" href="@Url.Action(actionName: "bikeDetails", controllerName: "Mechanic", routeValues: new { bikeId = card.bikeId })"><span class="glyphicon glyphicon-list"></span>  Details</a>
                <a class="btn btn-primary" data-toggle="modal" data-target="#siteModal" href="@Url.Action("newInspection", new { bikeId = card.bikeId})"><span class="glyphicon glyphicon-search"></span>  Inspect</a>
				<a class="btn btn-warning" data-toggle="modal" data-target="#siteModal" href="@Url.Action("newMaintenance", new { bikeId = card.bikeId})"><span class="glyphicon glyphicon-wrench"></span>  Maintain</a>
			</div>
		</div>
	</div>
}
</div>
<hr />
<div>@Html.PageLinks(Model.pagingInfo, x => Url.Action("bikeListing", new { page = x }))</div>