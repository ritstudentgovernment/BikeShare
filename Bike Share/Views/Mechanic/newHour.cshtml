@model BikeShare.Models.WorkHour

@{
    ViewBag.Title = "Enter Time";
    Layout = null;
}
<script>
    $(document.body).on('hidden.bs.modal', function () {
        $('#siteModal').removeData('bs.modal')
    });
</script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="siteModalLabel"><span class="glyphicon glyphicon-time"></span> @ViewBag.Title</h4>
</div>
@using (Html.BeginForm("newHour", "Mechanic", new { userId = Model.user.bikeUserId}, FormMethod.Post, new { }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.user)
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label class="control-label col-sm-4">Time Start</label>
                <div class="col-sm-8">
                    <input type="datetime" id="timeStart" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Time End</label>
                <div class="col-sm-8">
                    <div data-provide="datepicker"></div>
                    <input type="datetime" id="timeEnd" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Comment</label>
                <div class="col-sm-8">
                    @Html.TextArea("comment", new { @class="form-control"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Workshop</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.shop.workshopId,
                    new SelectList(ViewBag.query, "workshopId", "name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.shop.workshopId)
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer text-right">
        <button type="submit" value="Save" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-save"></span> Save</button>
    </div>
}
