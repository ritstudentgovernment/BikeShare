@model BikeShare.ViewModels.specWithMaint

@{
    ViewBag.Title = "New Inspection of Bike #" + Model.spec.bike.bikeNumber.ToString();
    Layout = null;
}
<script>
    $(document.body).on('hidden.bs.modal', function () {
        $('#siteModal').removeData('bs.modal')
    });
</script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title" id="siteModalLabel"><span class="glyphicon glyphicon-search"></span> @ViewBag.Title</h4>
</div>
@using (Html.BeginForm("newInspection", "Mechanic", new { }, FormMethod.Post, new { }))
{
    <div class="modal-body">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading"><h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseSpec">Inspection</a></h4></div>
                <div class="panel-collapse collapse in" id="collapseSpec">
                    <div class="panel-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.spec.comment, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.spec.comment)
                                    @Html.ValidationMessageFor(model => model.spec.comment)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.spec.isPassed, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.CheckBoxFor(model => model.spec.isPassed)
                                    @Html.ValidationMessageFor(model => model.spec.isPassed)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Workshop</label>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.spec.placeInspected.workshopId,
                                    new SelectList(ViewBag.query, "workshopId", "name"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.spec.placeInspected.workshopId)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-danger">
                <div class="panel-heading"><h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseMaint">Maintenance</a></h4></div>
                <div class="panel-collapse collapse" id="collapseMaint">
                    <div class="panel-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.maint.title, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.maint.title)
                                    @Html.ValidationMessageFor(model => model.maint.title)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.maint.details, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.maint.details)
                                    @Html.ValidationMessageFor(model => model.maint.details)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.maint.disableBike, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.CheckBoxFor(model => model.maint.disableBike)
                                    @Html.ValidationMessageFor(model => model.maint.disableBike)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.spec.bike.bikeId)
        
    </div>

    <div class="modal-footer text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" value="Save" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-save"></span> Save</button>
    </div>
}
