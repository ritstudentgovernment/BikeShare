@model BikeShare.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<script>
    $(document.body).on('hidden.bs.modal', function () {
        $('#loginModal').removeData('bs.modal')
    });
</script>
    @using (Html.BeginForm(null, null, new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", @placeholder = "RIT Username" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password" })
        <input type="submit" value="Log In" role="button" class="input-lg btn-lg full-width form-control btn-primary" />
    }